<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duopaint.MainMenuController">
   <children>
      <BorderPane fx:id="menuBG" prefHeight="642.0" prefWidth="856.0" stylesheets="@MainMenu.css">
         <center>
            <StackPane fx:id="mainStackPane" alignment="CENTER" maxHeight="276.0" maxWidth="370.0" prefHeight="276.0" prefWidth="370.0" BorderPane.alignment="CENTER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <VBox fx:id="midVBox" alignment="CENTER" maxHeight="256.0" maxWidth="350.0" prefHeight="256.0" prefWidth="350.0" spacing="10.0" stylesheets="@MainMenu.css" StackPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="nameTextField" alignment="CENTER" prefHeight="38.0" prefWidth="376.0" promptText="Enter your name">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </TextField>
                        <HBox fx:id="selectionHBox" alignment="CENTER" prefHeight="154.0" prefWidth="339.0">
                           <children>
                              <Button fx:id="changeLeft" mnemonicParsing="false" text="&lt;">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Button>
                              <ImageView fx:id="selectImageView" fitHeight="139.0" fitWidth="209.0" pickOnBounds="true" preserveRatio="true" />
                              <Button fx:id="changeRight" mnemonicParsing="false" text="&gt;">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                        <Button fx:id="playButton" alignment="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="300.0" text="PLAY!" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Button>
                        <Button fx:id="createGameButton" alignment="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="Create Private Room" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </VBox>
               </children>
            </StackPane>
         </center>
         <top>
            <ImageView fitHeight="150.0" fitWidth="443.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@logo.gif" />
               </image>
               <BorderPane.margin>
                  <Insets top="20.0" />
               </BorderPane.margin>
            </ImageView>
         </top>
         <bottom>
            <BorderPane prefHeight="70.0" prefWidth="856.0" BorderPane.alignment="CENTER">
               <left>
                  <Button fx:id="menuHelpButton" mnemonicParsing="false" onAction="#clickHelp" prefHeight="32.0" prefWidth="49.0" text="?" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="10.0" />
                     </BorderPane.margin>
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Button>
               </left>
               <center>
                  <Button fx:id="menuAboutButton" mnemonicParsing="false" text="About" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
               </center>
               <right>
                  <Button fx:id="menuExitButton" mnemonicParsing="false" text="Exit" textFill="RED" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="10.0" />
                     </BorderPane.margin>
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Button>
               </right>
            </BorderPane>
         </bottom>
      </BorderPane>
      <BorderPane fx:id="overlayHelp" prefHeight="200.0" prefWidth="200.0" visible="false">
         <top>
            <Region prefHeight="149.0" prefWidth="856.0" BorderPane.alignment="CENTER" />
         </top>
         <left>
            <Region prefHeight="393.0" prefWidth="197.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Region prefHeight="393.0" prefWidth="195.0" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <VBox fx:id="menuHelpVBox" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="351.0" prefWidth="489.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="45.0" prefWidth="467.0">
                     <children>
                        <Region prefHeight="31.0" prefWidth="433.0" />
                        <Button fx:id="exitHelp" maxWidth="33.0" mnemonicParsing="false" onAction="#exitHA" prefHeight="30.0" prefWidth="33.0" text="X" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <HBox style="-fx-background-color: black;">
                     <children>
                        <Region prefHeight="200.0" prefWidth="200.0" />
                        <ImageView fx:id="helpImageView" fitHeight="292.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@helpSteps/step1.gif" />
                           </image>
                        </ImageView>
                        <Region prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="41.0" prefWidth="467.0">
                     <children>
                        <Region prefHeight="29.0" prefWidth="151.0" />
                        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="29.0" prefWidth="235.0" spacing="18.0">
                           <children>
                              <RadioButton contentDisplay="CENTER" mnemonicParsing="false" selected="true">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="helpStepGroup" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" toggleGroup="$helpStepGroup" />
                              <RadioButton mnemonicParsing="false" toggleGroup="$helpStepGroup" />
                              <RadioButton mnemonicParsing="false" toggleGroup="$helpStepGroup" />
                              <RadioButton mnemonicParsing="false" prefHeight="17.0" prefWidth="15.0" toggleGroup="$helpStepGroup" />
                           </children>
                        </HBox>
                        <Region prefHeight="29.0" prefWidth="151.0" />
                     </children>
                  </HBox>
               </children></VBox>
         </center>
         <bottom>
            <Region prefHeight="101.0" prefWidth="856.0" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</StackPane>
