<StackPane stylesheets="@GameScene.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duopaint.GameSceneController">
   <children>
      <BorderPane id="gamingBG" fx:id="gamingBG" maxHeight="-Infinity" maxWidth="856.0" minHeight="-Infinity" prefHeight="642.0" prefWidth="856.0">
      
