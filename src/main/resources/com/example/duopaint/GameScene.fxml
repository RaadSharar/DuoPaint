                              <children>
                                 <Region prefHeight="200.0" prefWidth="200.0" />
                                 <HBox alignment="TOP_RIGHT">
                                    <children>
                                       <ImageView fx:id="eraseButton" fitHeight="39.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                             <Image url="@eraser.png" />
                                          </image>
                                       </ImageView>
                                       <Region prefHeight="200.0" prefWidth="200.0" />
                                       <ImageView fx:id="clearButton" fitHeight="38.0" fitWidth="37.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                             <Image url="@trashcan.png" />
                                          </image>
                                       </ImageView>
                                    </children>
                                 </HBox>
                                 <Region prefHeight="200.0" prefWidth="200.0" />
                              </children>
                           </VBox>
                        </children>
                     </HBox>
                  </children>
               </VBox>
              </StackPane>
          </center>
      
          <!-- Right: Placeholder for Chatbox -->
          <right>
              <VBox prefHeight="542.0" prefWidth="181.0" style="-fx-padding: 10; -fx-background-color: white;">
               <children>
                  <HBox prefHeight="497.0" prefWidth="151.0">
                     <children>
                        <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </HBox>
                  <Region prefHeight="29.0" prefWidth="161.0" />
                  <TextField fx:id="textField" onAction="#guessSubmitted" />
               </children>
              </VBox>
          </right>
         <bottom>
            <Region prefHeight="0.0" prefWidth="857.0" BorderPane.alignment="CENTER" />
         </bottom>
         <left>
            <StackPane prefHeight="542.0" prefWidth="186.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="642.0" prefWidth="123.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="19.0" prefWidth="221.0" style="-fx-background-color: #000000;" text="PLAYERS" textAlignment="CENTER" textFill="RED">
