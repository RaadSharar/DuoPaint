          <center>
              <StackPane prefHeight="571.0" prefWidth="479.0" style="-fx-padding: 10;">
               <VBox>
                  <children>
                     <AnchorPane prefHeight="450.0" prefWidth="490.0" style="-fx-background-color: white;">
                        <children>
                              <Canvas fx:id="drawingCanvas" height="450.0" width="490.0" />
                        </children>
                     </AnchorPane>
                     <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="137.0" prefWidth="490.0">
                        <children>
                           <ColorPicker fx:id="colorPicker" editable="true" onAction="#handleColorChange" prefHeight="25.0" prefWidth="65.0">
                              <value>
                                 <Color />
                              </value>
                           </ColorPicker>
                           <Region prefHeight="73.0" prefWidth="31.0" />
                           <Slider fx:id="widthSlider" max="20.0" min="1.0" value="3.0" />
                           <Region prefHeight="73.0" prefWidth="265.0" />
